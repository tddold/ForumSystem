@model ForumSystem.Web.InputModels.Questions.AskInputModel
@{
    /**/

    ViewBag.Title = "Ask question";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Ask", "Questions", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger"})

    <div class="form-group">
        @Html.LabelFor(model => model.Title, new { @class = "col-md-1 control-lable" })
        <div class="col-md-11 ">
            @Html.EditorFor(model => model.Title, new { placeholder = "Title 123" })
        </div>
    </div>


    <div class="form-group">
        @Html.EditorFor(model => model.Content)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Tags, new { @class = "col-md-1 control-lable" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.Tags, new { placeholder = "at least one tag such as (ruby-on-rails-3 pyton c), max 5 tags" })
        </div>
    </div>

    <div class="form-group text-center">
            <input type="submit" class="btn btn-primary btn-lg" value="Ask questions" />
    </div>
}

